        <activity
            android:name="com.gomdev.shader.perFragmentLighting.PFLActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.gomdev.shader.multiLighting.MultiLightingActivity"
            android:label="@string/app_name" >
